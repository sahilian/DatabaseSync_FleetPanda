@model DatabaseSync.ViewModels.CustomerLocationVM

<div class="container mt-5">
    <form asp-action="Edit" method="post">
        <h3 class="text-center mb-4">Edit Customer with Locations</h3>

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <h4 class="mt-4">Locations</h4>
        <div id="locationFields">
            @for (int i = 0; i < Model.Addresses.Count; i++)
            {
                <div class="form-group">
                    <label class="form-label">Address</label>
                    <input name="Addresses[@i]" value="@Model.Addresses[i]" class="form-control" />
                </div>
            }
        </div>
        <button type="button" id="addLocation" class="btn btn-secondary mt-2">Add Another Address</button>

        <button type="submit" class="btn btn-primary mt-4">Update Customer with Locations</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('addLocation').addEventListener('click', function () {
            var locationFields = document.getElementById('locationFields');
            var newAddressField = document.createElement('div');
            newAddressField.classList.add('form-group');
            newAddressField.innerHTML = `
                        <label class="form-label">Address</label>
                        <input name="Addresses" class="form-control" />
                    `;
            locationFields.appendChild(newAddressField);
        });
    </script>
}
